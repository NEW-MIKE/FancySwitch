<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="it.zehus.fancyswitchsample.MainActivity">

    <it.zehus.fancyswitch.FancySwitch
            android:id="@+id/fancySwitch_7"
            android:layout_height="110dp"
            android:layout_width="wrap_content"
            app:orientation="PORTRAIT"
            app:actionOffDrawable="@drawable/ic_hdr_off"
            app:actionOnDrawable="@drawable/ic_hdr_on"
            app:baseColor="@android:color/holo_blue_dark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/fancySwitch_6"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">
    </it.zehus.fancyswitch.FancySwitch>
    <it.zehus.fancyswitch.FancySwitch
            android:id="@+id/fancySwitch_6"
            android:layout_height="140dp"
            android:layout_width="wrap_content"
            app:orientation="PORTRAIT"
            app:actionOffDrawable="@drawable/ic_mood_bad"
            app:actionOnDrawable="@drawable/ic_mood_happy"
            app:baseColor="@android:color/holo_blue_bright"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fancySwitch_1" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/fancySwitch_7">
    </it.zehus.fancyswitch.FancySwitch>
    <it.zehus.fancyswitch.FancySwitch
            android:id="@+id/fancySwitch"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_blur_on"
            app:actionOnDrawable="@drawable/ic_blur_off"
            app:baseColor="@android:color/holo_blue_light"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/fancySwitch_4">
    </it.zehus.fancyswitch.FancySwitch>
    <it.zehus.fancyswitch.FancySwitch
            android:id="@+id/fancySwitch_1"
            android:layout_height="250dp"
            android:layout_width="wrap_content"
            app:orientation="PORTRAIT"
            app:actionOffDrawable="@drawable/ic_lock_open_1"
            app:actionOnDrawable="@drawable/ic_lock_closed_1"
            app:baseColor="@android:color/holo_green_dark"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/fancySwitch_6">
    </it.zehus.fancyswitch.FancySwitch>
    <it.zehus.fancyswitch.FancySwitch
            android:id="@+id/fancySwitch_3"
            android:layout_height="79dp"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_camera_front"
            app:actionOnDrawable="@drawable/ic_camera_rear"
            app:baseColor="@android:color/holo_orange_dark"
            app:layout_constraintStart_toEndOf="@+id/fancySwitch_4"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/fancySwitch_4"
            app:layout_constraintBottom_toBottomOf="@+id/fancySwitch_4" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5">
    </it.zehus.fancyswitch.FancySwitch>
    <it.zehus.fancyswitch.FancySwitch
            android:id="@+id/fancySwitch_4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_visibility_off"
            app:actionOnDrawable="@drawable/ic_visibility_on"
            app:baseColor="@android:color/holo_purple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/fancySwitch_3"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/fancySwitch_1">
    </it.zehus.fancyswitch.FancySwitch>
    <it.zehus.fancyswitch.FancySwitch
            android:id="@+id/fancySwitch_5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:orientation="LANDSCAPE"
            app:actionOffDrawable="@drawable/ic_alarm_off"
            app:actionOnDrawable="@drawable/ic_alarm_on"
            app:baseColor="@android:color/holo_red_dark"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/fancySwitch" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent">
    </it.zehus.fancyswitch.FancySwitch>
</android.support.constraint.ConstraintLayout>